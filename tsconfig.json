{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "rootDir": "app",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": [
    "app/**/*"
  ]
}
